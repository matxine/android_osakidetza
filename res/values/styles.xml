<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <style name="tableRow" parent="android:Theme.Light">
        <item name="android:layout_marginTop">1dp</item>
        <item name="android:layout_marginRight">1dp</item>
        <item name="android:layout_marginLeft">1dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>       
    </style>
    <style name="imgRow" parent="android:Theme.Light">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:scaleType">matrix</item>
    </style>
    <style name="botonRow" parent="android:Theme.Light">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:layout_weight">4</item>
        <item name="android:textColor">#000000</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="boton" parent="android:Theme.Light">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_margin">20dp</item>
        <item name="android:padding">5dp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">12pt</item>
        <item name="android:background">@drawable/boton_aceptar</item>        
    </style>
</resources>
